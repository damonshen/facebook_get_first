extends ../layout

block styles
  link(href='http://sailsjs.org/styles/fonts.css', rel='stylesheet')
  link(href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css')

block body
  #fb-root
    .content
      .header 
        .title Get First 
        .menu-bar
          ul
            li
              a.btn.btn-danger home
            li
              a.btn.btn-primary(href='javascript:FB.login();') introduction
            li 
              a.btn.btn-info(href='javascript:testAPI();') set
            li
              .fb-login-button(data-max-rows="1" data-size="medium" data-auto-logout-link="true" scope="publish_actions")
      .main
        .input-group
          input.form-control(type='text' name='searchString')
          span.input-group-btn
            button.searchBtn.btn.btn-default(type='button') Go
        .postPage
          .fb-post(data-href="https://www.facebook.com/photo.php?fbid=778758992149011&set=a.403281643030083.97927.306767216014860&type=1" data-width="500")

